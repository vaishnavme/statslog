generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(nanoid(19))
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sessions  Session[]
  projects  Projects[]

  @@index([id])
  @@index([email])
}

model Session {
  id           String   @id @default(nanoid(19))
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessionToken String   @unique
  userAgent    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
}

model Projects {
  id        String   @id @default(nanoid(19))
  name      String
  domain    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
}
