generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String        @id
  email     String        @unique
  password  String
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  sessions  AuthSession[]
  projects  Project[]

  @@index([id])
  @@index([email])
  @@map("users")
}

model AuthSession {
  id        String   @id
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  expiresAt DateTime @map("expires_at")
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
  @@map("auth_sessions")
}

model Project {
  id        String   @id
  name      String
  domain    String
  userId    String   @map("user_id")
  appId     String   @unique @map("app_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
  @@map("projects")
}
