generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sessions  Sessions[]
  projects  Projects[]

  @@index([id])
  @@index([email])
}

model Sessions {
  id        String   @id
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
}

model Projects {
  id        String   @id
  name      String
  domain    String
  userId    String
  appId     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@index([userId])
}
